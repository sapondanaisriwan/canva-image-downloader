{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "`Canva Image Downloader",
  "description": "A chrome extension boilerplate using Next.js for building products and CRXJS for development.  ",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": { "service_worker": "src/background/background.js" },
  "action": {
    "default_popup": "index.html",
    "default_title": "Canva Image Downloader"
  },
  "icons": {
    "16": "public/images/icon-16.png",
    "32": "public/images/icon-32.png",
    "48": "public/images/icon-48.png",
    "64": "public/images/icon-64.png",
    "128": "public/images/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["**/*", "*"],
      "use_dynamic_url": true
    }
  ]
}
